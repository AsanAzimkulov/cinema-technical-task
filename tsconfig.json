{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"],
      "~": ["./src"],
      "@": ["./src"]
    },
    "types": ["nuxt", "node"],
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "include": [
    "src/**/*",
    ".nuxt/types/**/*.d.ts",
    ".nuxt/imports.d.ts"
  ]
}